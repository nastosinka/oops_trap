<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Создание таблицы maps -->
    <changeSet id="002-1" author="dev">
        <createTable tableName="maps">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="hp" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="time_1" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="time_2" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="time_3" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="max_players" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="picture_url" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>