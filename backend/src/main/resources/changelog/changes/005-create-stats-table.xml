<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="005-1" author="dev">
        <createTable tableName="stats">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="id_user" type="INT">
                <constraints nullable="false" foreignKeyName="fk_stats_user" references="user(id)"/>
            </column>
            <column name="id_map" type="INT">
                <constraints nullable="false" foreignKeyName="fk_stats_maps" references="maps(id)"/>
            </column>
            <column name="time" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="BOOLEAN"/>
        </createTable>
    </changeSet>
    
</databaseChangeLog>